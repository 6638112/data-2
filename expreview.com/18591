var subtitle_text = "www.expreview.com | Higher is better  "; // 副标题文字
var unit_text = "FPS "; //单位
var leftside = "8%"; //左边空白
var topside = 50; //每组间距
var mblur = 0.05; //模煳效果
var bgopacity = 0; //背景透明度，0为全透明
var mysort = 0; //是否排序
var myper = 1; //是否显示百分比
